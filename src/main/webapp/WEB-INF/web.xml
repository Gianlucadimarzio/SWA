<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RESTDispatchServlet</servlet-name>
        <servlet-class>org.mwt.soa.examples.fattura.rest.RESTDispatcherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CollectionResourceServlet</servlet-name>
        <servlet-class>org.mwt.soa.examples.fattura.rest.CollectionResourceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemResourceServlet</servlet-name>
        <servlet-class>org.mwt.soa.examples.fattura.rest.ItemResourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RESTDispatchServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
